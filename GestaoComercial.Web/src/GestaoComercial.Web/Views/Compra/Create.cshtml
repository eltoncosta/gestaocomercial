        <div class="form-group">
            <label asp-for="ContaID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ContaID" class="form-control" asp-items="ViewBag.ContaID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Valor" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Valor" class="form-control" />
